<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3333">

    <TextView
        android:id="@+id/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="41dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/space_grotesk_bold"
        android:scrollbarSize="8dp"
        android:text="What is your langauge level?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/A1"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_corners1"
        android:backgroundTint="#17DBCF"
        android:fontFamily="@font/space_grotesk_bold"
        android:text="A1 Beginner Level"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/A2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/A2"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_corners1"
        android:backgroundTint="#17DBCF"
        android:fontFamily="@font/space_grotesk_bold"
        android:text="A2 ElementaryLevel"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/B1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/B1"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_corners1"
        android:backgroundTint="#17DBCF"
        android:fontFamily="@font/space_grotesk_bold"
        android:text="B1 Intermediate Level"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/B2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/B2"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/button_corners1"
        android:backgroundTint="#17DBCF"
        android:fontFamily="@font/space_grotesk_bold"
        android:text="B2 Advanced Level"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Continue"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Continue"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_corners2"
        android:backgroundTint="#3B8681"
        android:fontFamily="@font/space_grotesk_bold"
        android:onClick="continueButton"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#17DBCF" />
</androidx.constraintlayout.widget.ConstraintLayout>
